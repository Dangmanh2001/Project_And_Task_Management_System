<div class="container mt-5">
  <h1>Quản lý Quyền Người Dùng</h1>
  <% if (success.length > 0) { %>
    <div class="alert alert-success">
      <% success.forEach(message => { %>
      <p><%= message %></p>
      <% }) %>
    </div>
    <% } %> <% if (error.length > 0) { %>
    <div class="alert alert-danger">
      <% error.forEach(message => { %>
      <p><%= message %></p>
      <% }) %>
    </div>
    <% } %>
  
  
  <form method="POST" action="/assign-role/<%= id %>">
    <div class="form-group">
      <label for="role">Tên vai trò:</label>
      <select id="role" name="role_name" class="form-control">
        <% roles.forEach(role => { %>
          <option value="<%= role.id %>"
            <%= userRole.Roles.some(r => r.id === role.id) ? 'selected' : '' %> >
            <%= role.name %>
          </option>
        <% }) %>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
  </form>
  <br />
<a href="/list-user" class="btn btn-secondary">Quay lại danh sách người dùng</a>

</div>

